{
    "name": "bordoni/ai-prompts-library",
    "description": "A WordPress plugin to create, organize, and reuse AI prompts with advanced management features.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Gustavo Bordoni",
            "email": "bordoni@bordoni.me",
            "homepage": "https://bordoni.me"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "stellarwp/pup": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "AIPromptsLibrary\\": "src/AIPromptsLibrary/"
        },
        "files": [
            "includes/functions-helpers.php"
        ]
    },
    "scripts": {
        "pup": [
            "@php ./bin/pup.phar"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
