{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ai-prompts-library/prompt-content",
	"title": "Prompt Content",
	"category": "text",
	"icon": "editor-code",
	"description": "Display or edit AI prompt content",
	"keywords": [
		"prompt",
		"ai",
		"code",
		"template"
	],
	"version": "1.0.0",
	"textdomain": "ai-prompts-library",
	"usesContext": [
		"postId",
		"postType",
		"queryId"
	],
	"attributes": {
		"align": {
			"type": "string"
		},
		"className": {
			"type": "string"
		},
		"displayMode": {
			"type": "string",
			"enum": [
				"auto",
				"manual"
			],
			"default": "auto"
		},
		"selectedPromptId": {
			"type": "number",
			"default": 0
		},
		"showCopyButton": {
			"type": "boolean",
			"default": true
		},
		"showCopyButtonEdit": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"anchor": true,
		"color": {
			"text": true,
			"background": true,
			"gradients": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"fontFamily": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
